<view class="container">
  <view class="tag_maxdiv" style="width:100%;">
    <view class="lbt_div">
      <swiper indicator-dots autoplay style="height:100%;">
        <swiper-item wx:for="{{imgUrl}}" wx:key="imgUrl">
          <image mode="widthFix" src="{{item}}" class="slide-image" />
        </swiper-item>

      </swiper>
    </view>
  </view>

  <view class="tag_maxdiv" style="margin-top: 40rpx;">
    <image mode="widthFix" style="border-radius: 12rpx; "
      src="https://img11.360buyimg.com/ddimg/jfs/t1/142300/23/8454/182775/5f609830E994c9258/13552279327307ba.jpg">
    </image>
  </view>

  <!-- 视频 -->
  <view class="video_div">
    <video class="video_nr"
      src="https://fnck-20200914-1303154931.cos.ap-guangzhou.myqcloud.com/%E8%A7%86%E9%A2%91/%E9%BC%8E%E6%98%93.mp4"
      object-fit="cover" bindended="onEnded"></video>
  </view>

  <!-- 列表 -->
  <view class="tag_maxdiv" style="margin-bottom: 40rpx;" wx:for="{{selectList}}" id="{{index}}" bindtap="toDetails">
    <image mode="widthFix" style="border-radius: 12rpx; " src="{{item}}">
    </image>
  </view>

  <view class="tag_maxdiv">
    <view class="tag">
      <view class="gsjs_div">进一步了解</view>
      <view class="ckgd_div" bindtap="detailsdj">
        <view class="ckgd_nrdiv">
          <view class="ckgd_nr">查看更多</view>
        </view>
      </view>
    </view>

    <view class="layout">
      <view class="layout_maxdiv" style="margin-top: 0;" bindtap="wenzhangdjone">
        <view class="layout_imgdiv">
          <image mode="widthFix" style="width: 100%;height: 100%;border-radius: 12rpx; "
            src="https://img14.360buyimg.com/ddimg/jfs/t1/134113/10/9950/101232/5f609a16Eaa25f1e6/aa22982c9ba93cdd.png">
          </image>
        </view>
        <view class="layout_zhongdiv">
          <view class="layout_title">破除行业寒冰，引领创富之路丨鼎易乐平战役拉开江西首战</view>
        </view>
      </view>

      <view class="layout_maxdiv" bindtap="wenzhangdjtwo">
        <view class="layout_imgdiv">
          <image mode="widthFix" style="width: 100%;height: 100%;border-radius: 12rpx; "
            src="https://img10.360buyimg.com/ddimg/jfs/t1/147949/18/8430/89297/5f609b0bEda322c46/4d8ff55a3b485dec.png">
          </image>

        </view>
        <view class="layout_zhongdiv">
          <view class="layout_title">致敬新时代，探索LED灯照明新未来</view>
        </view>
      </view>
    </view>
  </view>

  <view class="footer">
    <image mode="widthFix"
      src="https://img14.360buyimg.com/ddimg/jfs/t1/149512/21/9259/535922/5f6d6057Ef86b23cc/c0923b8ae9276721.jpg">
    </image>
  </view>

</view>