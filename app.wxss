@import "/static/iconfont/iconfont.wxss";

image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.row {
  display: flex;
  flex-direction: row;
}


.column {
  display: flex;
  flex-direction: column;
}

.justify-center {
  display: flex;
  justify-content: center;
}

.align-center {
  display: flex;
  align-items: center;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

/* 视频 */
.video_div {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
}

.video_nr {
  width: 90%;
  height: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}

/* 底部 */
.footer {
  width: 100%;
  background-color: black;
}