.title_div {
  width: 100%;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  line-height: 60rpx;
  padding: 30rpx 0;
}

.main_div {
  width: 100%;
  font-size: 24rpx;
  line-height: 34rpx;
  text-indent: 2em;
  margin-top: 20rpx;
}

.main_mindiv {
  width: 100%;
  font-size: 20rpx;
  line-height: 34rpx;
  margin-top: 20rpx;
  color: #AEAEAE;
  text-align: center;
}

.main_div_img {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 0rpx solid black;
}

.main_div_img image {
  border-radius: 10rpx;
}

.title {
  width: 50%;
  border: 0rpx solid black;
  margin: auto;
}